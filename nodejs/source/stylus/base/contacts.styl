.contacts {
  float: left;
  width: 660px;
  margin-right: 40px;
  position: relative;
}

.contacts-block {
  position: absolute;
  right: 30px;
  z-index: 1;
  background: #fff;
  padding: 5px 20px;
  width: 200px;
  box-shadow: 0 10px 10px rgba(0,0,0,0.1);
  border-radius: 0 0 3px 3px;
}

.contacts p b {
  text-transform: uppercase;
  font-size: 14px;
  font-family: 'Boblic',"PT Sans", Arial, serif;
}

.contacts p a {
  color: #CC1558;
}

.contacts p a:hover {
  color: #CA4173;
}