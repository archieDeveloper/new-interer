.about-list {
  list-style-type: none;
  overflow: hidden;
}

.about-list li {
  float: left;
  width: 235px;
  margin-right: 20px;
}

.about-list ul li {
  margin: 3px 0;
}

.about-list li:last-child {
  margin-right: 0;
}

.about-list li .header-about {
  text-transform: uppercase;
  font-size: 18px;
  height: 51px;
  font-family: 'Boblic', 'PT Sans', Arial, serif;
}

.about-list li p {
  margin: 20px 0;
}

.about-list li .header-about .image {
  width: 51px;
  height: 51px;
  border-radius: 51px;
  float: left;
  margin-right: 15px;
  background: #E61F50;
}

.about-list ul {
  margin: 20px 0 20px 20px;
}