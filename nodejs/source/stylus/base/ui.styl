.button{
  color: #fff;
  padding: 10px 15px 8px 15px;
  border: 0;
  border-radius: 3px;
  background: #363636;
  text-transform: uppercase;
  font-size: 14px;
  font-weight: bold;
  outline: none;
  font-family: 'Boblic',"PT Sans", Arial, serif;
}

.button:hover{
  cursor: pointer;
  color: #fff;
  background: #CC1558;
}

.button.think {
  background: transparent;
  border: 2px solid #363636;
  color: #363636;
  opacity: 0.7;
  padding: 8px 15px 6px 15px;
}

.button.think:hover, .button.think.white:hover {
  opacity: 1;
}

.button.think.white {
  background: transparent;
  border: 2px solid #fff;
  color: #fff;
  opacity: 0.7;
}

.form input, .form textarea {
  padding: 7px;
  margin: 0 0 15px 0;
  border: 1px solid #eee;
  outline: none;
  border-radius: 3px;
  font-family: 'PT Sans', Arial, serif;
  color: #444;
  width: 100%;
  box-sizing: border-box;
}

.form input:focus, .form textarea:focus {
  border: 1px solid #1591CC;
}

.form label {
  font-weight: bold;
  font-size: 14px;
  display: block;
  margin-bottom: 5px;
  font-family: 'Boblic', 'PT Sans', Arial, serif;
  text-transform: uppercase;
}

.select {
  display: block;
  width: 72px;
  height: 30px;
  float: left;
  margin-right: 10px;
}

.select-prev {
  float: left;
  margin-top: 5px;
  margin-right: 10px;
  font-size: 14px;
}

.select .drop {
  display: none;
}

.slct.active {
  border: 1px solid #1591CC;
  border-radius: 3px 3px 0 0;
}

.slct {
  float: left;
  display: block;
  position: relative;
  background: #fff;
  width: 50px;
  padding: 2px 10px;
  color: #444;
  text-decoration: none;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  border-radius: 3px;
  font-size: 13px;
  margin-right: 10px;
  line-height: 25px;
  border: 1px solid #EEE;
}

.slct span {
  float: left;
}

.slct i {
  color: #444;
  float: right;
  background: rgba(0, 0, 0, 0);
  height: 30px;
  line-height: 32px;
  width: 30px;
  margin: -2px -10px -3px 0;
  text-align: center;
}

.drop {
  margin: 0;
  padding: 5px 0;
  width: 70px;
  display: none;
  float: left;
  background: #fff;
  color: #444;
  border-radius: 0 0 3px 3px;
  list-style-type: none;
  border: 1px solid #EEE;
  height: 130px;
  overflow-y: scroll;
}

.drop li {
  margin: 0;
  cursor: pointer;
  padding: 5px 10px;
  font-size: 14px;
}

.drop li:hover {
  background: #fafafa;
}

.cleaner{
  float: none;
  clear: both;
}

